<% if notice %>
  <p class="alert alert-success" id="notice"><%= notice %></p>
<% end %>

<div class="container">
  <div class="row gutters-sm">
    <div class="col-md-5 justify-content-center">
      <h2>User details</h2>
      <div class="card mb-3">
        <div class="card-body">
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Email</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= @user.email %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Rol</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= @user.role %>
            </div>
          </div>
          <hr>
          <%= link_to 'Edit', edit_user_path(@user), :class => "btn btn-primary btn-sm" %>
          <%= link_to 'Back', users_path, :class => "btn btn-secondary btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>
