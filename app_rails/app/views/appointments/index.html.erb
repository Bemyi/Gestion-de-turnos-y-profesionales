<p id="notice"><%= notice %></p>

<h1>Appointments of <%= @professional %></h1>
<%= form_for :search, url: professional_appointments_path(@professional), method: :get do |f| %>
  <%= f.label :dateS, "Search by date:" %>
  <%= f.date_field :dateS, value: @dateS %>
  <%= f.submit 'Search' %>
  <%= link_to 'Reset', professional_appointments_path(@professional) %>
  <% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.name %></td>
        <td><%= appointment.date %></td>
        <td><%= link_to 'Show', [@professional, appointment] %></td>
        <% if can? :update, appointment %>
          <td><%= link_to 'Edit', edit_professional_appointment_path(@professional, appointment) %></td>
        <% end %>
        <% if can? :destroy, appointment %>
        <td><%= link_to 'Cancel', [@professional, appointment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if can? :cancel_all, Appointment %>
  <p><%= link_to 'Cancel all', cancel_all_professional_appointments_path(@professional), method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>
<% if can? :create, Appointment %>
  <%= link_to 'New Appointment', new_professional_appointment_path(@professional) %>
<% end %>
<%= link_to 'Back', @professional %>
